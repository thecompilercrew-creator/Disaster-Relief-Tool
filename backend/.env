# MongoDB Atlas Connection String
# Steps to get this:
# 1. Go to https://cloud.mongodb.com
# 2. Create free cluster (M0 Sandbox)
# 3. Create database user (Database Access)
# 4. Whitelist IP: 0.0.0.0/0 (Network Access)
# 5. Click "Connect" → "Connect your application"
# 6. Copy connection string and replace <password> with your password
MONGODB_URI=mongodb+srv://admin:YourPassword123@cluster0.xxxxx.mongodb.net/disaster_relief?retryWrites=true&w=majority

# JWT Secret Key
# CRITICAL: Generate a secure random string for production!
# Run this command to generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Example output: a1b2c3d4e5f6...
JWT_SECRET=8f3a9b2c7d1e4f6a8b9c0d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5a6b7c8d9e0f1a2

# Server Port (Railway/Render will set this automatically)
PORT=5000

# Node Environment
NODE_ENV=production

